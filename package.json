{
	"name": "express-typescript-example",
	"version": "1.2.0",
	"description": "Example of setting up Express.js API server using TypeScript",
	"keywords": [
		"express",
		"typescript",
		"example"
	],
	"author": {
		"name": "Petri Kivikangas",
		"email": "petri.kivikangas@protonmail.com",
		"url": "https://github.com/Kitanotori"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Kitanotori/express-typescript-example"
	},
	"bugs": {
		"url": "https://github.com/Kitanotori/express-typescript-example/issues"
	},
	"homepage": "https://github.com/Kitanotori/express-typescript-example#readme",
	"license": "Apache-2.0",
	"main": "lib/app.js",
	"engines": {
		"node": ">=8.2"
	},
	"scripts": {
		"build": "npm run lint && npm run clear && tsc",
		"build:docker": "npm install && npm run build && npm prune --production && npm run build:docker:raw && npm install",
		"build:docker:raw": "docker build -t kitanotori/express-typescript-example .",
		"clear": "del-cli 'lib/*' 'log/*' '!.gitignore'",
		"lint": "npx eslint . --ext .ts",
		"start": "cross-env NODE_ENV=production node .",
		"start:dev": "cross-env NODE_ENV=development NODE_PATH=src tsc-watch --onSuccess \"node .\"",
		"start:docker": "docker run -d -p 3000:3000 kitanotori/express-typescript-example",
		"test": "cross-env NODE_ENV=test jest lib/test",
		"test:watch": "cross-env NODE_ENV=test tsc-watch --onSuccess \"jest lib/test\""
	},
	"dependencies": {
		"@types/jest": "^26.0.22",
		"body-parser": "^1.19.0",
		"cross-env": "^7.0.3",
		"express": "^4.17.1",
		"morgan": "^1.10.0",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.0",
		"@types/express": "^4.17.11",
		"@types/morgan": "^1.9.2",
		"@types/node": "^14.14.37",
		"@types/winston": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"absolute-path-converter": "^1.0.6",
		"del-cli": "^3.0.1",
		"eslint": "^7.24.0",
		"jest": "^26.6.3",
		"nodemon": "^2.0.7",
		"ts-node": "^9.1.1",
		"tsc-watch": "^4.2.9",
		"tslint": "^6.1.3",
		"tslint-config-airbnb": "^5.11.2",
		"typescript": "^4.2.4"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"jest": true
		},
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"rules": {
			"no-process-env": 0,
			"overrides": 0,
			"newline-after-var": 0,
			"class-methods-use-this": 0,
			"id-match": [
				"error",
				"^([$]|[A-Z]|[a-z]|[0-9]+)+([A-Z][a-z][0-9]+)*$"
			],
			"func-style": [
				1,
				"declaration",
				{
					"allowArrowFunctions": true
				}
			]
		},
		"parserOptions": {
			"ecmaVersion": 9
		}
	}
}
